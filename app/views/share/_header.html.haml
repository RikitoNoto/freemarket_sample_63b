%section.header
  .inner
    .upper
      = link_to root_path, class: "logo" do
        = image_tag "/material/logo/logo.png",alt:"logo"
      = form_with url: root_path, scope: :post, local: true do |f|
        .search_field
          = f.text_field :keyword, class: "search_field__input_area", placeholder: "キーワードから探す"      
          %buttin.search_field__submit
            = f.submit "", class: "search_field__submit--btn", id: "submit-btn" 
            %label(for="submit-btn")
              = image_tag "/material/icon/icon-search 1.png"
    .lower
      .left_btns
        .left_btns__category
          カテゴリー
        .left_btns__brand
          ブランド
      .right_btns
        = link_to root_path,class: "right_btns__login" do
          ログイン
        = link_to root_path,class: "right_btns__signup" do
          新規会員登録