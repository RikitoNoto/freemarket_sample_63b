.item_comment
    .item_comment__profile
        .item_comment__profile__photo_circle
            = image_tag comment.user.photo_filepath.url, class: "item_comment__profile__photo_circle__photo"
        %p.item_comment__profile__name
            =comment.user.nickname
    %p.item_comment__comment
        = comment.comment
        %span.item_comment__comment__time
            = comment.created_at